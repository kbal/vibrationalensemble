UNITS LENGTH=A TIME=fs ENERGY=kcal/mol

DISTANCE ATOMS=1,2 LABEL=d1

bf1: BF_CHEBYSHEV MINIMUM=1 MAXIMUM=3.5 ORDER=48

td: TD_GRID FILE=histo

# Expansion

VES_LINEAR_EXPANSION ...
 ARG=d1
 BASIS_FUNCTIONS=bf1
 TEMP=300
 GRID_BINS=500
 TARGET_DISTRIBUTION=td
 LABEL=b1
... VES_LINEAR_EXPANSION

# Optimization algorithm

OPT_AVERAGED_SGD ...
  BIAS=b1
  STRIDE=2000
  LABEL=o1
  STEPSIZE=0.10
  FES_OUTPUT=1000
  BIAS_OUTPUT=10
  FES_PROJ_OUTPUT=20
  COEFFS_OUTPUT=1
... OPT_AVERAGED_SGD

FLUSH STRIDE=400
PRINT ARG=d1,b1.bias STRIDE=400 FILE=colvar

