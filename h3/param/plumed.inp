UNITS LENGTH=A TIME=fs ENERGY=kcal/mol

DISTANCE ATOMS=1,2 LABEL=d1

bf1: BF_CHEBYSHEV MINIMUM=0 MAXIMUM=3 ORDER=48

td: TD_GRID FILE=histo

# Expansion

VES_LINEAR_EXPANSION ...
 ARG=d1
 BASIS_FUNCTIONS=bf1
 TEMP=300
 GRID_BINS=600
 TARGET_DISTRIBUTION=td
 LABEL=b1
... VES_LINEAR_EXPANSION

# Optimization algorithm

OPT_AVERAGED_SGD ...
  BIAS=b1
  STRIDE=10000
  LABEL=o1
  STEPSIZE=0.1
  FES_OUTPUT=1000
  BIAS_OUTPUT=10
  FES_PROJ_OUTPUT=20
  COEFFS_OUTPUT=1
... OPT_AVERAGED_SGD

FLUSH STRIDE=1000
PRINT ARG=d1,b1.bias STRIDE=1000 FILE=colvar

